---

import PanelNav from "../components/panel_nav.astro"
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/imagenes/icono.png" />
		<script src="https://kit.fontawesome.com/c7f9f6173a.js" crossorigin="anonymous"></script>
		<script>
			import '../script/protected.js'
		
		
		</script>
		<title>{title}</title>
	</head>
	<body class="m-0 p-0 h-screen flex flex-col sm:flex-row  bg-gray-50">
	<PanelNav/>

	<main class="sm:flex-1  overflow-auto">
		
		<slot />
	  </main>
	
	</body>
	
</html>
<style is:global>



	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

</style>
