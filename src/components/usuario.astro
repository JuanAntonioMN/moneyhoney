---
const { id,nombre,correo,url_img,telefono,sexo,edad,institucion,rol } = Astro.props;
console.log(url_img);

import {  roles } from "../script/roles";

const rols=await roles();

const resultado=rols.find((rol:any)=>rol.id===rol);

---


            <div class="bg-white  shadow rounded-lg w-full sm:w-full md:w-5/6  lg:w-1/2 xl:w-1/3 mx-auto" data-id=`${id}`>
                <div class="flex justify-center">
                    
                        <img src={`https://moneyhoneyb.onrender.com/uploads/images/users/${url_img}`}  alt={nombre} class="rounded-full mx-auto  w-32 h-32 shadow-md border-4 border-white transition duration-200 transform hover:scale-110">
                </div>
                
                <div class="mt-2">
                    <h1 class="font-bold text-center text-3xl text-gray-900">{nombre}</h1>
                    <p class="text-center text-sm text-gray-400 font-medium">{resultado}</p>
                    
                    <div class="my-5 px-6 w-full">
                        <button id={`eliminar-${id}`} class="text-gray-200  w-full rounded-lg text-center font-medium leading-6 px-6 py-3 bg-[#8C52FF] hover:bg-black hover:text-white">Eliminar usuario</button>
                    </div>
                   

                    <div class="w-full">
                        <h3 class="font-medium text-gray-900 text-left px-6">Información del usuario</h3>
                        <div class="mt-5 w-full flex flex-col items-center overflow-hidden text-sm">
                            <a href="#" class=" border-t border-gray-100 text-gray-600 py-4 pl-6 pr-3 w-full block hover:bg-gray-100 transition duration-150 overflow-hidden">
                                <img src="https://avatars0.githubusercontent.com/u/35900628?v=4" alt="" class="rounded-full h-6 shadow-md inline-block mr-2">
                                Institución
                                <span class="text-gray-500 text-xs">{institucion}</span>
                            </a>
                            
                            <a href="#" class=" border-t border-gray-100 text-gray-600 py-4 pl-6 pr-3 w-full block hover:bg-gray-100 transition duration-150">
                                <img src="https://avatars0.githubusercontent.com/u/35900628?v=4" alt="" class="rounded-full h-6 shadow-md inline-block mr-2">
                                   Nombre
                                    <span class="text-gray-500 text-xs">{nombre}</span>
                            </a>
                            <a href="#" class=" border-t border-gray-100 text-gray-600 py-4 pl-6 pr-3 w-full block hover:bg-gray-100 transition duration-150">
                                <img src="https://avatars0.githubusercontent.com/u/35900628?v=4" alt="" class="rounded-full h-6 shadow-md inline-block mr-2">
                                Numero de telefono
                                <span class="text-gray-500 text-xs">{telefono}</span>
                            </a>

                            <a href="#" class=" border-t border-gray-100 text-gray-600 py-4 pl-6 pr-3 w-full block hover:bg-gray-100 transition duration-150">
                                <img src="https://avatars0.githubusercontent.com/u/35900628?v=4" alt="" class="rounded-full h-6 shadow-md inline-block mr-2">
                               correo
                                <span class="text-gray-500 text-xs">{correo}</span>
                            </a>

                            <a href="#" class=" border-t border-gray-100 text-gray-600 py-4 pl-6 pr-3 w-full block hover:bg-gray-100 transition duration-150">
                                <img src="https://avatars0.githubusercontent.com/u/35900628?v=4" alt="" class="rounded-full h-6 shadow-md inline-block mr-2">
                                    Edad
                                    <span class="text-gray-500 text-xs">{edad}</span>
                            </a>

                            <a href="#" class=" border-t border-gray-100 text-gray-600 py-4 pl-6 pr-3 w-full block hover:bg-gray-100 transition duration-150">
                                <img src="https://avatars0.githubusercontent.com/u/35900628?v=4" alt="" class="rounded-full h-6 shadow-md inline-block mr-2">
                               Sexo 
                                <span class="text-gray-500 text-xs">{sexo}</span>
                            </a>

                           

                           
                            
                        </div>
                    </div>
                </div>
            </div>

      



