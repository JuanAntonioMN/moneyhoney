---
import { roles } from "../script/roles";

const rol=await roles();
---

<section  class="max-w-4xl px-6 mx-auto bg-white rounded-md shadow-2xl h-auto">
  <h1 class="text-5xl font-bold text-[#8C52FF] font-opensans p-4">Ingresa la información correcta</h1>
  <form>
      <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
          <div>
              <input id="nombre" name="nombre"  type="text" class=" block w-full px-4 py-2 mt-2 text-gray-text-gray-900 bg-gray-100 rounded-md outline-none" placeholder="Nombre Completo*" required>
          </div>


          <div>
              <input id="correo" name="correo" type="email" class="block w-full px-4 py-2 mt-2 text-gray-text-gray-900 bg-gray-100 rounded-md dark:text-gray-300  outline-none" placeholder="Correo Electronico*" required>
          </div>

          <div>
              <input id="contrasenia" name="contrasenia" type="password" class="block w-full px-4 py-2 mt-2 text-gray-text-gray-900 bg-gray-100 rounded-md  dark:text-gray-300 outline-none" placeholder="Contraseña*" required>
          </div>

          <div>    
              <input id="confirmar" name="confirmar" type="password" class="block w-full px-4 py-2 mt-2 text-gray-text-gray-900 bg-gray-100 rounded-md outline-none" placeholder="Confirma la contraseña*" required>
          </div>
          <div>
            <input id="telefono" name="telefono" type="number" class="block w-full px-4 py-2 mt-2 text-gray-text-gray-900 bg-gray-100 rounded-md  dark:text-gray-300 outline-none" placeholder="Numero de telefono*" required>
          </div>

          <div>
            <input id="institucion" name="institucion"  type="text" class=" block w-full px-4 py-2 mt-2 text-gray-text-gray-900 bg-gray-100 rounded-md outline-none" placeholder="Nombre institucion*" required>
        </div>

          <div>
              <input id="edad" name="edad" type="number" class="block w-full px-4 py-2 mt-2 text-gray-text-gray-900 bg-gray-100 rounded-md  dark:text-gray-300 outline-none" placeholder="Edad">
          </div>
         
          <div>
              <select id="sexo" name="sexo" class="block w-full px-4 py-2 mt-2 text-gray-400 bg-gray-100 rounded-md   outline-none">
                  <option value="Hombre">Hombre</option>
                  <option value="Mujer">Mujer</option>
                  <option value="Otro">Otro</option>
              </select>
          </div>

          
          <div>
              <select id="rol" name="rol" class="block w-full px-4 py-2 mt-2 text-gray-400 bg-gray-100 rounded-md   outline-none" required>
                 
                  {rol.map((rol:any) => (
                    <option value={rol.nombre}>{rol.nombre}</option>
                  ))}
                
              </select>
          </div>
          <div>
             
            <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
              <div class="space-y-1 text-center">
                <svg class="mx-auto h-12 w-12 text-white" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                  <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                <div class="flex text-sm">
                  <label for="url_img" class="relative cursor-pointer bg-white rounded-md font-medium outline-none">
                    <span class="text-lg text-gray-500 font-opensans">Subir imagen</span>
                    <input id="url_img" name="url_img" accept="image/*" type="file" class="sr-only">
                  </label>
                 
                </div>
                <p class="text-sm font-opensans text-gray-500">
                  PNG, JPG
                </p>
              </div>
            </div>
          </div>
      </div>

      <div class="flex justify-end p-4">
          <button class=" w-full px-6 py-4 leading-5 rounded-lg text-white font-opensans text-xl transition-colors duration-200 transform bg-[#8C52FF] rounded-m ">Registrar usuario</button>
      </div>
  </form>
</section>



