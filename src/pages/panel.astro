---
import PanelLayout from "../layouts/PanelLayout.astro"
import { fetchVentas } from '../script/fetchVentas.js';
const ventas = await fetchVentas();
---


<PanelLayout title="Ventas">

  

<div class="max-w-full h-screen mx-auto">
    

   <div class="w-full flex justify-between items-center mb-3 mt-1 pl-3">
       <div>
           <h3 class="text-lg font-semibold text-slate-800">Información de ventas de los libros</h3>
           
       </div>
     
   </div>
   
   <div class="relative flex flex-col w-full h-full overflow-scroll text-gray-700 bg-white shadow-md rounded-lg bg-clip-border font-opensans">
   <table class="w-full text-left table-auto min-w-max">
       <thead>
       <tr>
           <th class="p-4 border-b border-slate-200 bg-slate-50">
           <p class="text-sm font-normal leading-none text-slate-500">
               Nombre de comprandor
           </p>
           </th>
           <th class="p-4 border-b border-slate-200 bg-slate-50">
           <p class="text-sm font-normal leading-none text-slate-500">
            Correo electrónico
           </p>
           </th>
           <th class="p-4 border-b border-slate-200 bg-slate-50">
           <p class="text-sm font-normal leading-none text-slate-500">
               
               Numero de telefono
           </p>
           </th>
           <th class="p-4 border-b border-slate-200 bg-slate-50">
           <p class="text-sm font-normal leading-none text-slate-500">
               Metodo de obtener libro
           </p>
           </th>
           <th class="p-4 border-b border-slate-200 bg-slate-50">
           <p class="text-sm font-normal leading-none text-slate-500">
               Cupón
           </p>
           </th>

           <th class="p-4 border-b border-slate-200 bg-slate-50">
            <p class="text-sm font-normal leading-none text-slate-500">
                Nombre del libro
            </p>
            </th>
       </tr>
       </thead>
       <tbody>

        {ventas.map((venta:any) => (

       <tr class="hover:bg-slate-50 border-b border-slate-200">
           <td class="p-4 py-5">
           <p class="block font-semibold text-sm text-slate-800">{venta.nombre}</p>
           </td>
           <td class="p-4 py-5">
           <p class="text-sm text-slate-500">{venta.email}</p>
           </td>
           <td class="p-4 py-5">
           <p class="text-sm text-slate-500">{venta.telefono}</p>
           </td>
           <td class="p-4 py-5">
           <p class="text-sm text-slate-500">{venta.metodoObtencion}</p>
           </td>
           <td class="p-4 py-5">
           <p class="text-sm text-slate-500">{venta.cupon}</p>
           </td>
           <td class="p-4 py-5">
           <p class="text-sm text-slate-500">{venta.nombreLibro}</p>
           </td>
       </tr>
       ))}
     
      
      
       </tbody>
   </table>
   
   
   </div>
   
</div>
    
</PanelLayout>


     