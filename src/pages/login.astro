---
import LoginLayout from '../layouts/LoginLayout.astro';
const today = new Date();
const anio = today.getFullYear();
---

<LoginLayout title='Iniciar sesion'>





 <div class="w-full flex sm:flex-row flex-col  h-auto shadow font-opensans">
    <div class="portada w-full  shadow-inner h-auto"></div>
    <div class="w-full h-screen  flex flex-col justify-between gap-4 bg-white p-4">
        <div>
            <h1 class="text-5xl font-bold text-center text-[#8C52FF] py-8">INICIAR SESIÓN</h1>
        </div>
        
        <form  class="w-full  flex flex-col gap-10 px-5 shadow-2xl bg-[#8C52FF] py-8 rounded-lg">
            
            <div class="w-full flex flex-col gap-5 ">
                <label for="correo" class="text-xl font-semibold text-white">Correo electronico</label>
                <input type="email" name="correo" id="correo" class="w-full  outline-none  p-2 bg-white rounded-lg text-gray-900 shadow" placeholder="correo@gmail.com" required>
            </div>
    
            <div class="w-full flex flex-col gap-5">
                <label for="contrasenia" class="text-xl font-semibold text-white">Contraseña</label>
                <input type="password" name="contrasenia" id="contrasenia" class="w-full  outline-none p-2  bg-white rounded-lg text-gray-900 shadow" placeholder="contrasenia" required>
            </div>
            <div>
                <button class="w-full h-[3rem] px-5 shadow-lg rounded-[2rem] font-opensans font-semibold text-xl text-[#8C52FF]   bg-white">Iniciar Sesión</button>
            </div>
        </form>
        <div class="flex w-full flex-col justify-between gap-5">
            <div>
                <p class="sm:text-base text-[.9rem] text-center text-[#8C52FF]"><b class="">¿No tienes una cuenta?</b>  Contacta al administrador</p>
            </div>
        
            <div class="w-full flex gap-3 justify-center items-center text-[#8C52FF]">
                    <a href="https://www.facebook.com/carolinamoneyhoney/" target="_blank"><i class="fa-brands fa-facebook-f transition-all ease-in delay-100 duration-500  hover:text-xl "></i></a>
                    <a href="https://www.instagram.com/__moneyhoney____/" target="_blank"><i class="fa-brands fa-instagram transition-all ease-in delay-100 duration-500 hover:text-xl"></i></a>
                    <a href="https://www.tiktok.com/@moneyhoneyhoney" target="_blank"><i class="fa-brands fa-tiktok transition-all ease-in delay-100 duration-500 hover:text-xl"></i></a>
                    <a href="https://www.threads.net/@__moneyhoney____" target="_blank"><i class="fa-brands fa-threads transition-all ease-in delay-100 duration-500  hover:text-xl"></i></a>
                    <a href="https://www.youtube.com/@moneyhoney_" target="_blank"><i class="fa-brands fa-youtube transition-all ease-in delay-100 duration-500  hover:text-xl"></i></a>
            </div>
        
        
            <div class="w-full">
            <p class="text-sm text-center text-[#8C52FF]">  © {anio} moneyhoney. Todos los derechos reservados.</p>
        
            </div>
        </div>
    </div>
   
     
    
 </div>


 <style>
    .portada{
        background-image: url('/public/imagenes/portada.svg');
        background-size: cover;
        background-position: center;
        height: 100vh;
    }
 </style>
<script>
    import '../script/login.js'
</script>
</LoginLayout>